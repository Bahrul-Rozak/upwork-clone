<%- include('../partials/header', { title: 'Daftar - UpworkClone' }) %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-success text-white text-center py-4">
                    <h3 class="my-0">
                        <i class="fas fa-user-plus me-2"></i>Daftar sebagai <%= role === 'client' ? 'Client' : 'Freelancer' %>
                    </h3>
                </div>
                <div class="card-body p-5">
                    <% if (error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <form action="/auth/register" method="POST">
                        <input type="hidden" name="role" value="<%= role %>">
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label">Nama Lengkap</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control" id="name" name="name" 
                                           value="<%= locals.name || '' %>" required>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Nomor Telepon (Opsional)</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-phone"></i>
                                    </span>
                                    <input type="tel" class="form-control" id="phone" name="phone" 
                                           value="<%= locals.phone || '' %>">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input type="email" class="form-control" id="email" name="email" 
                                       value="<%= locals.email || '' %>" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control" id="password" name="password" 
                                           minlength="6" required>
                                </div>
                                <div class="form-text">Minimal 6 karakter</div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="confirmPassword" class="form-label">Konfirmasi Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control" id="confirmPassword" 
                                           name="confirmPassword" required>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Daftar
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                Sudah punya akun? 
                                <a href="/auth/login" class="text-decoration-none">Login di sini</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <div class="btn-group" role="group">
                    <a href="/auth/register?role=client" 
                       class="btn <%= role === 'client' ? 'btn-primary' : 'btn-outline-primary' %>">
                        <i class="fas fa-user-tie me-2"></i>Daftar sebagai Client
                    </a>
                    <a href="/auth/register?role=freelancer" 
                       class="btn <%= role === 'freelancer' ? 'btn-success' : 'btn-outline-success' %>">
                        <i class="fas fa-code me-2"></i>Daftar sebagai Freelancer
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>